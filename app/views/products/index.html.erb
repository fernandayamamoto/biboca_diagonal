<div class="banner" style="background-image:radial-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://st.gde-fon.com/wallpapers_original/392077_garri-potter_fan-art_diagon_1950x1287_www.Gde-Fon.com.jpg)">
  <div class="container">
    <h1>Biboca Diagonal
    <p class="ml3">Get out of line, come to Diagon Alley.</p>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
  </div>
</div>

<div class="carousel">
  <% @products.each_with_index do |product, index| %>
    <input type="radio" name="position" <%= "checked" if index.zero? %>  />
  <% end %>
  <main id="carousel">
   <% @products.each do |product| %>

             <div class="item">
            <div class="card-trip mt-3">
              <% if product.photo.attached? %>
              <%= cl_image_tag product.photo.key, width: 300, height: 200, crop: :fill %>
              <% else %>
              <%= "Produto sem imagem" %>
              <% end %>
              <div class="card-trip-infos" style="background-color: white">
                <div>
                  <%= link_to product.name, product_path(product), class: "text-decoration-none text-dark" %>
                </div>
                <h2 class="card-trip-pricing">R$ <%= product.price %>,00</h2>
              </div>
            </div>
          </div>

    <% end %>
    <main>
</div>
