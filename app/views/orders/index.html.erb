<div class="container">
  <br>
  <div>
    <h2 class="container d-flex justify-content-center .text-light">My products</h2>
    <div class="mx-auto d-flex justify-content-center" style="width: 600px;">
      <div class="col-sm-12 col-md-8 mb-4">
          <% @orders.each do |order| %>
            <div class="card-trip mt-3">
            <%= cl_image_tag order.product.photo.key, width: 400, height: 300, crop: :fill %>
            <div class="opacity-75">
              <h3 class="d-flex justify-content-center mt-2"><%= order.product.description  %></h3>
              <h5 class="d-flex justify-content-center"> <%= number_to_currency(order.product.price, unit: "$", separator: ",", delimiter: "")%></h5>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
